extends layout

block content
  //h3 #{title}

  form(method='POST' action='')
    div.form-group.row
      label.col-sm-2.col-form-label(for='numRowers') Number of Rowers:
      .form-check.form-check-inline
        input#inlineRadio1.form-check-input(type='radio' name='numRowers' value='3')
        label.form-check-label(for='inlineRadio1') 3
      .form-check.form-check-inline
        input#inlineRadio2.form-check-input(type='radio' name='numRowers' value='4')
        label.form-check-label(for='inlineRadio2') 4
      .form-check.form-check-inline
        input#inlineRadio3.form-check-input(type='radio' name='numRowers' value='5')
        label.form-check-label(for='inlineRadio3') 5
      .form-check.form-check-inline
        input#inlineRadio4.form-check-input(type='radio' name='numRowers' value='6')
        label.form-check-label(for='inlineRadio4') 6        
    div.form-group.row
      label.col-sm-2.col-form-label(for='numErgos') Number of Ergos:
      .form-check.form-check-inline
        input#inlineRadioErgo1.form-check-input(type='radio' name='numErgos' value='2')
        label.form-check-label(for='inlineRadioErgo1') 2
      .form-check.form-check-inline
        input#inlineRadioErgo2.form-check-input(type='radio' name='numErgos' value='3')
        label.form-check-label(for='inlineRadioErgo2') 3
      .form-check.form-check-inline
        input#inlineRadioErgo3.form-check-input(type='radio' name='numErgos' value='4')
        label.form-check-label(for='inlineRadioErgo3') 4
      .form-check.form-check-inline
        input#inlineRadioErgo4.form-check-input(type='radio' name='numErgos' value='5')
        label.form-check-label(for='inlineRadioErgo4') 5        
    div.form-group.row       
      label.col-sm-2.col-form-label(for='interval') Workout Interval :
      .col-sm-2  
        input#wktInterval(list='intervalChoices', placeholder='mm:ss' name='wktInterval')
        datalist#intervalChoices
          option(value='08:00')
          option(value='07:00')
          option(value='06:00')
          option(value='05:00')          
          option(value='04:00')          
          option(value='03:00')          
          option(value='02:00')                                        
    div.form-group.row       
      label.col-sm-2.col-form-label(for='recovery') Recovery :
      .col-sm-2  
        input#recovery(list='recoveryChoices', placeholder='mm:ss' name='recovery')
        datalist#recoveryChoices
          option(value='08:00')
          option(value='07:00')
          option(value='06:00')
          option(value='05:00')          
          option(value='04:00')          
          option(value='03:00')          
          option(value='02:00')              

    button.btn.btn-primary(type='submit') Calculate

    p
    .row
      .col-sm-2 Rest Time :
      .col-sm-2 #{calcRest}
    p
    .row
      .col-sm-2 Stagger Starts :
      .col-sm-2 #{calcStagger}

  if errors 
   ul
    for error in errors
     li!= error.msg
